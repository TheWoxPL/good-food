{
  "extends": ["plugin:react/recommended"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".css"]
      }
    }
  },
  "overrides": [
    {
      "files": ["src/components/ui/**/*.ts", "src/components/ui/**/*.tsx"],
      "rules": {
        "react-refresh/only-export-components": "off"
      }
    }
  ]
}
